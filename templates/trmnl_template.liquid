<style>
  .trmnl-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    font-family: 'Inter', system-ui, sans-serif;
    color: #111;
    overflow: hidden;
  }

  .day-header {
    font-size: 31px;
    font-weight: 750;
    text-align: center;
    padding-bottom: 8px;
  }

  .main-columns {
    display: flex;
    flex: 1;
    min-height: 0;
    gap: 24px;
  }

  .col {
    flex: 1;
    min-width: 0;
    max-width: 50%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .section-head {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-bottom: 6px;
    border-bottom: 2px solid #111;
    margin-bottom: 10px;
  }

  .section-name {
    font-size: 21px;
    font-weight: 750;
  }

  .section-num {
    font-size: 16px;
    font-weight: 550;
  }

  .task {
    display: flex;
    gap: 8px;
    align-items: flex-start;
    margin-bottom: 8px;
  }

  .checkbox {
    width: 16px;
    height: 16px;
    border: 2px solid #111;
    border-radius: 2px;
    flex-shrink: 0;
    margin-top: 3px;
  }

  .checkbox.checked {
    background: #111;
    position: relative;
  }

  .checkbox.checked::after {
    content: "";
    position: absolute;
    left: 4px;
    top: 1px;
    width: 4px;
    height: 8px;
    border: solid #f5f5f0;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }

  .task-content {
    flex: 1;
    min-width: 0;
  }

  .task-title {
    font-size: 17px;
    font-weight: 650;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .task-meta {
    font-size: 14px;
    font-weight: 550;
    margin-top: 2px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .more {
    font-size: 15px;
    font-weight: 550;
    font-style: italic;
    padding-top: 2px;
  }

  .empty {
    font-size: 17px;
    font-style: italic;
  }

  .done-section {
    margin-top: auto;
    padding-top: 12px;
  }

  .done-head {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-bottom: 4px;
    border-bottom: 1px solid #111;
    margin-bottom: 8px;
  }

  .done-name {
    font-size: 17px;
    font-weight: 750;
  }

  .done-task {
    flex: 1;
    min-width: 0;
    font-size: 16px;
    font-weight: 550;
    text-decoration: line-through;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .foot {
    text-align: center;
    font-size: 13px;
    font-weight: 550;
    padding-top: 8px;
    margin-top: auto;
  }
</style>

<div class="trmnl-container">
  <div class="day-header">{{ generated_at | date: "%A - %B %-d, %Y" }}</div>

  <div class="main-columns">
    <div class="col">
      <div class="section-head">
        <span class="section-name">Today</span>
      </div>

      {% if todos.today.size > 0 %}
        {% for todo in todos.today limit:4 %}
          <div class="task">
            <div class="checkbox"></div>
            <div class="task-content">
              <div class="task-title">{{ todo.title }}</div>
              {% if todo.project or todo.milestone %}
                <div class="task-meta">
                  {% if todo.project and todo.milestone %}
                    {{ todo.project }} / {{ todo.milestone }}
                  {% elsif todo.project %}
                    {{ todo.project }}
                  {% elsif todo.milestone %}
                    {{ todo.milestone }}
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
        {% if todos.today.size > 4 %}
          <div class="more">+ {{ todos.today.size | minus: 4 }} more...</div>
        {% endif %}
      {% else %}
        <div class="empty">All clear!</div>
      {% endif %}

      {% if todos.completed_today.size > 0 %}
        <div class="done-section">
          <div class="done-head">
            <span class="done-name">Done</span>
          </div>
          {% for todo in todos.completed_today limit:3 %}
            <div class="task">
              <div class="checkbox checked"></div>
              <div class="done-task">{{ todo.title }}</div>
            </div>
          {% endfor %}
          {% if todos.completed_today.size > 3 %}
            <div class="more">+ {{ todos.completed_today.size | minus: 3 }} more...</div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <div class="col">
      <div class="section-head">
        <span class="section-name">Tomorrow</span>
      </div>

      {% if todos.tomorrow.size > 0 %}
        {% for todo in todos.tomorrow limit:5 %}
          <div class="task">
            <div class="checkbox"></div>
            <div class="task-content">
              <div class="task-title">{{ todo.title }}</div>
              {% if todo.project or todo.milestone %}
                <div class="task-meta">
                  {% if todo.project and todo.milestone %}
                    {{ todo.project }} / {{ todo.milestone }}
                  {% elsif todo.project %}
                    {{ todo.project }}
                  {% elsif todo.milestone %}
                    {{ todo.milestone }}
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
        {% if todos.tomorrow.size > 5 %}
          <div class="more">+ {{ todos.tomorrow.size | minus: 5 }} more...</div>
        {% endif %}
      {% else %}
        <div class="empty">Nothing yet</div>
      {% endif %}
    </div>
  </div>

  <div class="foot">Updated {{ generated_at | date: "%b %d, %H:%M" }}</div>
</div>
