<%= form_with url: events_path, method: :get, class: "mb-4" do |form| %>
  <div class="flex items-center gap-2">
    <%= form.month_field :month,
          value: params[:month],
          class: "rounded-2xl border border-slate-300/80 bg-white px-4 py-2 text-sm text-slate-900 focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-400/30" %>
    <%= form.submit "Filter",
          class: "rounded-2xl bg-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-300 transition" %>
    <% if params[:month].present? %>
      <%= link_to "Clear", events_path,
            class: "text-sm text-slate-500 hover:text-slate-700 transition" %>
    <% end %>
  </div>
<% end %>
