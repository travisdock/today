<%= link_to event_path(event),
      class: "block rounded-xl px-4 py-3 hover:bg-slate-50 transition #{event.reminder? ? 'text-slate-500 italic' : ''}" do %>
  <div class="flex items-center gap-4">
    <span class="text-sm font-medium <%= event.reminder? ? 'text-slate-400' : 'text-slate-600' %> w-20">
      <% if event.all_day? %>
        All day
      <% else %>
        <%= event.display_starts_at.strftime("%l:%M %p").strip %>
      <% end %>
    </span>
    <span class="flex-1 <%= event.reminder? ? 'text-slate-500' : 'text-slate-900' %>">
      <%= event.title %>
    </span>
    <% if event.project.present? %>
      <span class="text-xs text-slate-400"><%= event.project.name %></span>
    <% end %>
  </div>
<% end %>
