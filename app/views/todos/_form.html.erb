<div id="todo_form">
  <h1 class="text-2xl font-semibold text-slate-900 sm:text-3xl">Today</h1>
  <p class="mt-2 text-sm text-slate-600">Capture what needs to get done and mark it off as you go.</p>

  <%= form_with model: todo, url: todos_path, class: "mt-6 space-y-4" do |form| %>
    <div>
      <%= form.label :title, "Add a todo", class: "block text-xs font-semibold uppercase tracking-wide text-slate-600" %>
      <div class="mt-2 flex flex-col gap-3 sm:flex-row">
        <%= form.text_field :title,
              required: true,
              autofocus: true,
              placeholder: "What do you need to do?",
              class: "w-full flex-1 rounded-2xl border border-slate-300/80 bg-white px-4 py-3 text-base text-slate-900 placeholder:text-slate-400 focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-400/30" %>
        <%= form.submit "Add",
              class: "rounded-2xl bg-blue-600 px-5 py-3 text-sm font-semibold uppercase tracking-wide text-white shadow-md transition hover:-translate-y-0.5 hover:bg-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-400/40" %>
      </div>
      <% if todo.errors.any? %>
        <ul class="mt-3 space-y-1 text-sm text-red-600">
          <% todo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>

  <% if Current.user&.voice_agent_enabled? %>
    <%= form_with url: agents_path,
                  method: :post,
                  scope: nil,
                  multipart: true,
                  html: {
                    class: "mt-8 flex flex-col items-center gap-2",
                    data: { controller: "audio-recorder" }
                  } do %>
      <input
        type="file"
        name="audio"
        accept="audio/webm,audio/mp4,audio/mpeg"
        data-audio-recorder-target="input"
        class="hidden"
      >
      <button
        type="button"
        data-action="audio-recorder#toggle"
        data-audio-recorder-target="button"
        class="flex h-16 w-16 items-center justify-center rounded-full bg-slate-900/80 text-slate-50 shadow-lg transition focus:outline-none focus:ring-4 focus:ring-blue-400/40"
        aria-pressed="false"
      >
        <span class="sr-only">Toggle voice recording</span>
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M8 5.5a4 4 0 0 1 8 0v5a4 4 0 1 1-8 0z" />
          <path d="M12 16.5v4" />
          <path d="M15.5 20.5h-7" />
        </svg>
      </button>
      <p
        class="text-xs font-semibold uppercase tracking-wide text-slate-600"
        data-audio-recorder-target="status"
        id="audio_recorder_status"
      >
        Tap to record
      </p>
      <div
        id="agent_transcriptions"
        class="mt-4 flex w-full max-w-md flex-col gap-3"
        aria-live="polite"
      ></div>
    <% end %>
  <% end %>
</div>
