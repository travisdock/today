<div class="mx-auto w-full max-w-md space-y-6 text-center">
  <% if flash[:alert] || flash[:notice] %>
    <% message_class = flash[:alert] ? "rounded-2xl border border-red-300/60 bg-red-100/80 px-4 py-3 text-sm font-medium text-red-700 shadow-lg" : "rounded-2xl border border-emerald-300/70 bg-emerald-100/80 px-4 py-3 text-sm font-medium text-emerald-700 shadow-lg" %>
    <div class="<%= message_class %>">
      <%= flash[:alert] || flash[:notice] %>
    </div>
  <% end %>

  <h1 class="text-3xl font-semibold tracking-tight text-white drop-shadow-md sm:text-4xl">Sign in</h1>

  <%= form_with url: session_path, class: "space-y-5 text-left" do |form| %>
    <div class="space-y-2">
      <%= form.label :email_address, "Email address", class: "block text-sm font-semibold uppercase tracking-wide text-white/80" %>
      <%= form.email_field :email_address,
            required: true,
            autofocus: true,
            autocomplete: "username",
            placeholder: "you@example.com",
            value: params[:email_address],
            class: "w-full rounded-2xl border border-white/40 bg-white/80 px-4 py-3 text-base text-slate-900 shadow-lg placeholder:text-slate-500 focus:border-blue-600 focus:outline-none focus:ring-4 focus:ring-blue-500/30" %>
    </div>

    <div class="space-y-2">
      <%= form.label :password, class: "block text-sm font-semibold uppercase tracking-wide text-white/80" %>
      <%= form.password_field :password,
            required: true,
            autocomplete: "current-password",
            placeholder: "Enter your password",
            maxlength: 72,
            class: "w-full rounded-2xl border border-white/40 bg-white/80 px-4 py-3 text-base text-slate-900 shadow-lg placeholder:text-slate-500 focus:border-blue-600 focus:outline-none focus:ring-4 focus:ring-blue-500/30" %>
    </div>

    <%= form.submit "Sign in", class: "w-full rounded-2xl bg-blue-600 px-4 py-3 text-base font-semibold text-white shadow-xl transition hover:-translate-y-0.5 hover:bg-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-400/40" %>
  <% end %>

  <p class="text-sm font-medium text-white/80">
    <%= link_to "Create an account", new_user_path, class: "font-semibold text-white underline-offset-4 transition hover:text-blue-100 hover:underline" %>
  </p>
</div>
