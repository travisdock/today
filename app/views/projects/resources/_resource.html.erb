<div class="rounded-xl bg-slate-50 p-4 group relative">
  <% if resource.url.present? %>
    <p class="mb-2">
      <%= link_to resource.url, resource.url, target: "_blank", rel: "noopener noreferrer",
            class: "text-blue-600 hover:text-blue-800 underline break-all" %>
    </p>
  <% end %>
  <% if resource.content.present? %>
    <p class="text-slate-700 whitespace-pre-wrap"><%= resource.content %></p>
  <% end %>
  <div class="mt-2 flex items-center justify-between">
    <p class="text-xs text-slate-400">
      <%= time_ago_in_words(resource.created_at) %> ago
    </p>
    <%= button_to project_resource_path(resource.project, resource),
          method: :delete,
          class: "text-red-500 hover:text-red-700 transition p-1 opacity-0 group-hover:opacity-100",
          data: { turbo_confirm: "Delete this resource?" },
          title: "Delete resource" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
</div>
