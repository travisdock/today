<div id="completed_milestones_list">
  <% if milestones.any? %>
    <details class="mt-4">
      <summary class="cursor-pointer text-sm text-slate-500 hover:text-slate-700 transition">
        Show <%= pluralize(milestones.size, "completed milestone") %>
      </summary>
      <div class="mt-2 space-y-2">
        <% milestones.each do |milestone| %>
          <%= render "projects/milestones/milestone", project: project, milestone: milestone %>
        <% end %>
      </div>
    </details>
  <% end %>
</div>
