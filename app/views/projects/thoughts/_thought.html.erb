<div class="rounded-xl bg-slate-50 p-4 group relative">
  <% if thought.image.attached? %>
    <div class="mb-3">
      <%= image_tag thought.image.variant(resize_to_limit: [800, 800], format: :webp), class: "rounded-lg max-w-full max-h-96 object-contain" %>
    </div>
  <% end %>
  <% if thought.content.present? %>
    <p class="text-slate-700 whitespace-pre-wrap"><%= thought.content %></p>
  <% end %>
  <div class="mt-2 flex items-center justify-between">
    <p class="text-xs text-slate-400">
      <%= time_ago_in_words(thought.created_at) %> ago
    </p>
    <%= button_to project_thought_path(thought.project, thought),
          method: :delete,
          class: "text-red-500 hover:text-red-700 transition p-1 opacity-0 group-hover:opacity-100",
          data: { turbo_confirm: "Delete this thought?" },
          title: "Delete thought" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
</div>
